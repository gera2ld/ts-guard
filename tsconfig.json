    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "outDir": "lib"
  },
  "include": [
    "src/**/*"
  ]
